<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text00"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="No"
        app:layout_constraintEnd_toStartOf="@+id/scroll"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/text02"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="상품코드"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text03"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="상품명\n배차번호(UDI)"
                app:layout_constraintStart_toEndOf="@+id/text02"
                app:layout_constraintTop_toTopOf="@+id/text02" />

            <TextView
                android:id="@+id/text04"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="P-CODE"
                app:layout_constraintStart_toEndOf="@+id/text03"
                app:layout_constraintTop_toTopOf="@+id/text02" />

            <TextView
                android:id="@+id/text05"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="로케이션"
                app:layout_constraintStart_toEndOf="@+id/text04"
                app:layout_constraintTop_toTopOf="@+id/text02" />

            <TextView
                android:id="@+id/text06"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="재고수량"
                app:layout_constraintStart_toEndOf="@+id/text05"
                app:layout_constraintTop_toTopOf="@+id/text02" />

            <TextView
                android:id="@+id/text07"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="실사수량"
                app:layout_constraintStart_toEndOf="@+id/text06"
                app:layout_constraintTop_toTopOf="@+id/text02" />

            <TextView
                android:id="@+id/text08"
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="단위"
                app:layout_constraintStart_toEndOf="@+id/text07"
                app:layout_constraintTop_toTopOf="@+id/text02" />

            <TextView
                android:id="@+id/text09"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="재고상태\n저장위치"
                app:layout_constraintStart_toEndOf="@+id/text08"
                app:layout_constraintTop_toTopOf="@+id/text02" />

            <TextView
                android:id="@+id/text10"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="제조일자\n유통기한"
                app:layout_constraintStart_toEndOf="@+id/text09"
                app:layout_constraintTop_toTopOf="@+id/text02" />

            <TextView
                android:id="@+id/text11"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="입고일자"
                app:layout_constraintStart_toEndOf="@+id/text10"
                app:layout_constraintTop_toTopOf="@+id/text02" />

            <TextView
                android:id="@+id/text12"
                android:layout_width="110dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="코멘트"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/text11"
                app:layout_constraintTop_toTopOf="@+id/text02" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/text12"
                tools:listitem="@layout/listitem" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>